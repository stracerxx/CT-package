# Environment Variables for CT-5 Crypto Trading Bot

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ct5_db
DB_USER=postgres
DB_PASSWORD=password

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys (Replace with your actual API keys)
OPENAI_API_KEY=your_openai_api_key
CLAUDE_API_KEY=your_claude_api_key
GEMINI_API_KEY=your_gemini_api_key
OPENROUTER_API_KEY=your_openrouter_api_key
DEEPSEEK_API_KEY=your_deepseek_api_key

# Trading Configuration
DEFAULT_EXCHANGE=binance
TRADING_MODE=paper  # Options: paper, live
MAX_TRADE_AMOUNT=100  # Maximum amount per trade in USD
RISK_LEVEL=medium  # Options: low, medium, high

# Perpetual Earning Mode Settings
MIN_MARKET_CONDITION_SCORE=60  # Score from 0-100, below which trading is suspended
MARKET_CHECK_INTERVAL=300  # Check market conditions every 5 minutes (300 seconds)
AUTO_RESUME_THRESHOLD=75  # Score from 0-100, above which trading auto-resumes

# RSS Feed Settings
RSS_UPDATE_INTERVAL=1800  # Update RSS feeds every 30 minutes (1800 seconds)
MAX_RSS_ITEMS=50  # Maximum number of RSS items to store

# Server Settings
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_URL=http://localhost:3000
